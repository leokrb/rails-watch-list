<h1><%= @list.name %></h1>


<% @bookmarks.each do |bookmark| %>

  <div class="card-trip">
    <%= image_tag bookmark.movie.poster_url, alt: "Movie poster" %>
    <div class="card-trip-infos">
      <div>
        <h2><%= bookmark.movie.title %> â€“ <%= bookmark.movie.rating %></h2>
        <p><%= bookmark.movie.overview %></p>
        <p><strong>Verdict: <%= bookmark.comment %></strong></p>
      </div>
    <p>
      <%= link_to "Remove",
        bookmark_path(bookmark),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
    </p>
  </div>
</div>

<% end %>

<%= link_to 'Add a bookmark', new_list_bookmark_path(@list) %>
